// https://github.com/dotnet/vscode-csharp/blob/7095cdad1549686d6786df18e36c2db0cf76b24c/debugger-launchjson.md
{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "RUN ALL APIS SERVICES",
      "configurations": [
        "Basket.API",
        "Customer.API",
        "Hangfire.API",
        "Inventory.API",
        "Ordering.API",
        "Product.API"
      ]
    }
  ],
  "configurations": [
    /// Basket.API
    {
      "name": "Basket.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/services/Basket/Basket.API/bin/Debug/net8.0/Basket.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/services/Basket/Basket.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "enableStepFiltering": false,
      "requireExactSource": false,
      "suppressJITOptimizations": true,
      "logging": {
        "moduleLoad": false
      },
      "justMyCode": true
    },
